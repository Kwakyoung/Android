<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="5dp">

    <RelativeLayout
        android:id="@+id/relativ_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/music_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
    <ImageView
        android:id="@+id/item_music"
        android:src="@drawable/melomance"
        android:layout_width="100dp"
        android:layout_height="100dp"/>


        <ImageView
            android:layout_margin="35dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/baseline_play_arrow_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/item_title"
        android:layout_below="@id/music_card"
        android:text="찬란한 하루"
        android:layout_width="100dp"
        android:layout_height="60dp"/>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/relativ_2"
        android:layout_below="@id/relativ_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/music1_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/item_music1"
            android:src="@drawable/lucy"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <ImageView
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/baseline_play_arrow_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_title1"
            android:layout_below="@id/music1_card"
            android:text="히어로"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>


    </RelativeLayout>




</RelativeLayout>