<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">






    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_below="@id/button1"
            android:id="@+id/profile"
            android:src="@drawable/ic_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@+id/button1"
            android:layout_toRightOf="@id/profile"
            android:text="KW4K"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/button1"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:padding="1dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/button1"
            android:text="프로필 보기"
            android:layout_width="80dp"
            android:layout_height="30dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_margin="3dp"
        android:background="@drawable/selector_exam1"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:paddingRight="100dp"
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_toLeftOf="@+id/right"
            android:text="당근하는 새로운 방법, 당근페이!"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/right"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="+ 충전"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:text="계좌송금"
            android:padding="3dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나의 거래" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/heart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/icon_heart" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/heart"
                    android:text="관심목록" />

                <ImageView
                    android:id="@+id/sell"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/heart"
                    android:layout_margin="5dp"
                    android:src="@drawable/icon_sell" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/text1"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/sell"
                    android:text="판매내역" />

                <ImageView
                    android:id="@+id/buy"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/sell"
                    android:layout_margin="5dp"
                    android:src="@drawable/icon_sell" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/text2"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/sell"
                    android:text="구매내역" />

                <ImageView
                    android:id="@+id/mo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/buy"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_menu6" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/text3"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/sell"
                    android:text="모아보기" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/mo"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_menu6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/text4"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/sell"
                    android:text="중고거래 가계부" />

            </RelativeLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B6B6B6"/>
        <LinearLayout
            android:layout_weight="1"
